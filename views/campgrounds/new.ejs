<% layout('layout/boilerplate') %>
    <div class="new-camp col-lg-6 col-sm-8 offset-lg-3 offset-sm-2 p-3 mb-3">
        <form action="/campgrounds" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>

            <h2 class="text-center">New Campground</h2>
            <div class="md-3">
                <label class="form-label" for="title">Title:</label>
                <input class="form-control" type="text" id="title" name="title" required>
            </div>
            <div class="md-3">
                <label class="form-label" for="location">Location:</label>
                <input class="form-control" type="text" name="location" id="location" required>

            </div>


            <div class="md-3">
                <label for="price" class="form-label">Price:</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">&#8377;</span>
                    <input type="text" class="form-control" placeholder="2000" id="price"
                        aria-describedby="basic-addon1" name="price" required>

                </div>
            </div>
            <div class="md-3">
                <label class="form-label" for="description">Description:</label>
                <textarea class="form-control" name="description" id="description" required></textarea>
            </div>

            <div class="md-3">
                <label class="form-label custom-file-label" for="image">Image:</label>
                <input type="file" class="form-control custom-file" id="image" name="image" multiple>
            </div>

            <button class="btn btn-success mt-2">Save Campground</button>

        </form>
    </div>