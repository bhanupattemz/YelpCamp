<% layout('layout/boilerplate') %>
    <form action="/campgrounds/<%= campground._id %>?_method=put" method="post" class="needs-validation"
        enctype="multipart/form-data" novalidate>
        <div class="offset-3 col-6 card p-3">
            <h2 class="text-center">Edit Campground</h2>
            <div class="md-3">
                <label class="form-label" for="title">Title:</label>
                <input class="form-control" type="text" id="title" name="title" value="<%= campground.title %>"
                    required>
            </div>
            <div class="md-3">
                <label class="form-label" for="location">Location:</label>
                <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>"
                    required>
            </div>


            <div class="md-3">
                <label for="price" class="form-label">Price:</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">&#8377;</span>
                    <input type="text" class="form-control" placeholder="2000" id="price"
                        aria-describedby="basic-addon1" name="price" value="<%= campground.price %>" required>

                </div>
            </div>
            <div class="md-3">
                <label class="form-label" for="description">Description:</label>
                <textarea class="form-control" name="description" id="description"
                    required><%= campground.description %></textarea>
            </div>
            <div class="md-3">
                <label class="form-label" for="image">Image:</label>
                <input type="file" class="form-control" id="image" name="image" required multiple>

            </div>
            <div class="md-3">
                <% campground.image.forEach(function(img,i){ %>
                    <img src="<%= img.url %>" class="img-thumbnail" alt="img of campground">
                    <div>
                        <input type="checkbox" class="form-checkbox-inline" id="image-<%=i %>" name="deleteImages[]"
                            value="<%= img.fileName %>">
                        <label for="image-<%=i %>" class="from-label">Delete</label>
                    </div>
                    <% } )%>
            </div>
            <button class="btn btn-success mt-2">Update Campground</button>
        </div>
    </form>